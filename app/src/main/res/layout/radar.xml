<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/radarHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/radar_heading"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/radarImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radarHeader"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:adjustViewBounds="true"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radarImageView"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:stretchColumns="*"
        android:layout_centerHorizontal="true">

        <TableRow android:layout_weight="1">
            <Button
                android:layout_weight="1"
                android:id="@+id/radar1Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Radar 1" />
            <Button
                android:layout_weight="1"
                android:id="@+id/radar2Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Radar 2" />
            <Button
                android:layout_weight="1"
                android:id="@+id/radar3Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Radar 3" />
        </TableRow>

        <TableRow android:layout_weight="1">
            <Button
                android:id="@+id/radar4Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Radar 4" />
            <Button
                android:id="@+id/radar5Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Radar 5" />
            <Button
                android:id="@+id/radar6Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Radar 6" />
        </TableRow>

    </TableLayout>

</RelativeLayout>