<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <TextView
         android:id="@+id/radarHeading"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="20dp"
         android:textSize="20sp"
         android:textStyle="bold"
         android:text="@string/radar_heading"/>

    <ImageView
        android:id="@+id/radar1"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_below="@+id/radarHeading"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"

        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <Button
        android:id="@+id/radar1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/radar1"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:text="Radar 1" />

    <Button
        android:id="@+id/radar2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radar1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Radar 2" />

    <Button
        android:id="@+id/radar3Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radar1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="40dp"
        android:text="Radar 3" />

    <Button
        android:id="@+id/radar4Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/radar1Button"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:text="Radar 4" />

    <Button
        android:id="@+id/radar5Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radar2Button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Radar 5" />

    <Button
        android:id="@+id/radar6Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/radar3Button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:text="Radar 6" />

</RelativeLayout>