<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/radar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="400dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <Button
        android:id="@+id/radar1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="450dp"
        android:layout_marginStart="60dp"
        android:text="Radar 1" />

    <Button
        android:id="@+id/radar2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:text="Radar 2" />
    <Button
        android:id="@+id/radar3Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="260dp"
        android:layout_marginTop="450dp"
        android:text="Radar 3" />
    <Button
        android:id="@+id/radar4Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="500dp"
        android:layout_marginStart="60dp"
        android:text="Radar 4" />
    <Button
        android:id="@+id/radar5Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:text="Radar 5" />
    <Button
        android:id="@+id/radar6Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="500dp"
        android:layout_marginStart="260dp"
        android:text="Radar 6" />

</RelativeLayout>