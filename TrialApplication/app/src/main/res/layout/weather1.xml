<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/currentWeatherHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="@string/current_weather_heading" />

    <TextView
        android:id="@+id/currentWeatherTextView"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@+id/currentWeatherHeader"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/loading_text"
        android:textSize="15sp"/>

    <HorizontalScrollView
        android:id="@+id/currentWeatherContent"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@+id/currentWeatherHeader"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableLayout
                android:stretchColumns="*"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow>
                    <TextView
                        android:textSize="15sp"
                        android:text="Temperature (°C)"/>
                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/temperature"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:textSize="15sp"
                        android:text="Wind Speed (kmph)"/>
                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/windSpeed"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:textSize="15sp"
                        android:text="Wind Direction (°)"/>
                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/windDirection"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:textSize="15sp"
                        android:text="Weather Status"/>
                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/weatherCode"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:textSize="15sp"
                        android:text="Is Day"/>
                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/isDay"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:textSize="15sp"
                        android:text="Updated Time"/>
                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/updatedTime"/>
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/forecastHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentWeatherContent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="@string/forecast_heading"
        android:textSize="20sp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/forecastHeader"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="150dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableLayout
                android:isScrollContainer="true"
                android:id="@+id/forecastContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"
                android:stretchColumns="*"
                android:visibility="invisible">

                <TableRow>

                    <TextView
                        android:text="Date"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/dayValue1"
                        android:textAlignment="center"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/dayValue2"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/dayValue3"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:text="Sunrise (HH:mm)"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/sunriseValue1"
                        android:textSize="15sp"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/sunriseValue2"
                        android:textSize="15sp"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/sunriseValue3"
                        android:textSize="15sp"
                        android:textAlignment="center"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:text="Sunset (HH:mm)"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/sunsetValue1"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/sunsetValue2"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/sunsetValue3"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:text="UV Index Max"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/uvIndexMaxValue1"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/uvIndexMaxValue2"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/uvIndexMaxValue3"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:text="UV Index Clear Sky Max"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/uvIndexClearSkyMaxValue1"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/uvIndexClearSkyMaxValue2"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/uvIndexClearSkyMaxValue3"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:text="Precipitation (mm)"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/precipitationValue1"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/precipitationValue2"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/precipitationValue3"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:text="Wind Speed Max (kmph)"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/windSpeedValue1"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/windSpeedValue2"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/windSpeedValue3"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:text="Wind Gusts Max (kmph)"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/windGustsValue1"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/windGustsValue2"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/windGustsValue3"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:text="Wind Direction Dominant (°)"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/windDirectionValue1"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/windDirectionValue2"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/windDirectionValue3"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:text="Temperature Max (°C)"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/temperatureMaxValue1"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/temperatureMaxValue2"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/temperatureMaxValue3"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:text="Temperature Min (°C)"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/temperatureMinValue1"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/temperatureMinValue2"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/temperatureMinValue3"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/forecastTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forecastHeader"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="150dp"
        android:maxLength="1000"
        android:text="Loading..."
        android:textSize="15sp" />



</RelativeLayout>